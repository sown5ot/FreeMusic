<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_downloaded_song_image"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="song"
        android:layout_toEndOf="@+id/iv_downloaded_song_image"
        android:layout_alignTop="@+id/iv_downloaded_song_image"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_downloaded_song_name"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_downloaded_song_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singer"
        android:layout_below="@+id/tv_downloaded_song_name"
        android:layout_toEndOf="@+id/iv_downloaded_song_image"
        android:textColor="#7dffffff"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>